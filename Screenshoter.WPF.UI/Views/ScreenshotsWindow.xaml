<Window x:Class="Screenshoter.WPF.UI.Views.ScreenshotsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screenshoter.WPF.UI.Views"
        DataContext="{Binding Source={StaticResource Locator}, Path=ScreenshotsWindowViewModel, UpdateSourceTrigger=PropertyChanged}"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Title}"/>
            <Button Content="Load Creenshots" Command="{Binding LoadScreenshots}"/>
        </StackPanel>
    </Grid>
</Window>
